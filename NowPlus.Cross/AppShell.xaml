<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NowPlus.Cross.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.SegmentedControl;assembly=Syncfusion.Maui.Toolkit"
    xmlns:pages="clr-namespace:NowPlus.Cross.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="NowPlus.Cross">

    <ShellContent
        Title="Clock"
        Icon="{StaticResource IconClock}" 
        ContentTemplate="{DataTemplate pages:ClockPage}"
        Route="clock" />

    <ShellContent
        Title="Stopwatch"
        Icon="{StaticResource IconStopwatch}" 
        ContentTemplate="{DataTemplate pages:StopwatchPage}"
        Route="stopwatch" />

    <ShellContent
        Title="Timer"
        Icon="{StaticResource IconTimer}" 
        ContentTemplate="{DataTemplate pages:TimerPage}"
        Route="timer" />

</Shell>
