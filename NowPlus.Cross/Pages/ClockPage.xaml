<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:NowPlus.Cross.PageModels"
             x:DataType="viewmodels:ClockPageModel"
             x:Class="NowPlus.Cross.Pages.ClockPage"
             Title="Clock">
    <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">
        <Label Text="{Binding CurrentTime}"
               FontSize="80"
               FontAttributes="Bold"
               HorizontalOptions="Center" />
        <Label Text="{Binding CurrentDate}"
               FontSize="24"
               HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
